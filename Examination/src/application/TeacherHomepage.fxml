<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TeacherHomepageController">
   <children>
      <TabPane prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Create Course">
               <content>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Create a New Course">
                           <font>
                              <Font name="Times New Roman Bold" size="39.0" />
                           </font>
                        </Label>
                        <VBox alignment="TOP_CENTER" prefHeight="323.0" prefWidth="580.0">
                           <children>
                              <Label text="Course Name: ">
                                 <font>
                                    <Font name="Times New Roman" size="20.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="courseNameField" prefHeight="26.0" prefWidth="423.0" promptText="Enter Course Name" />
                              <Label text="Course Description: ">
                                 <font>
                                    <Font name="Times New Roman" size="20.0" />
                                 </font>
                              </Label>
                              <TextArea fx:id="courseDesriptionField" prefHeight="90.0" prefWidth="800.0" promptText="Enter Course Description" />
                              <Button mnemonicParsing="false" onAction="#createCourse" text="Create Course" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Create Exam">
               <content>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Create an Exam">
                           <font>
                              <Font name="Times New Roman Bold" size="39.0" />
                           </font>
                        </Label>
                        <TextField fx:id="examCourseName" promptText="Enter Course Name" />
                        <TextField fx:id="examQuestionType" promptText="Enter Question Type (CQ or MCQ)" />
                        <Button mnemonicParsing="false" onAction="#createExam" text="Make Some Question on Console" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="View Exam">
               <content>
                  <VBox prefHeight="600.0" prefWidth="800.0">
                     <children>
                        <TableView fx:id="viewExams" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                              <TableColumn fx:id="viewExamID" prefWidth="89.60000610351562" text="Exam ID" />
                              <TableColumn fx:id="viewCourseID" minWidth="0.0" prefWidth="83.20001220703125" text="Course ID" />
                            <TableColumn fx:id="viewExamType" prefWidth="92.79998779296875" text="Exam Type" />
                            <TableColumn fx:id="viewExamTitle" prefWidth="123.199951171875" text="Title" />
                              <TableColumn fx:id="viewExamInstruction" prefWidth="160.7999267578125" text="Instruction" />
                          </columns>
                        </TableView>
                     </children></VBox>
               </content>
            </Tab>
          <Tab text="View Enrolled Student">
               <content>
                  <VBox prefHeight="600.0" prefWidth="800.0">
                     <children>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Enrollment ID" />
                            <TableColumn prefWidth="75.0" text="Student ID" />
                              <TableColumn prefWidth="75.0" text="Course ID" />
                          </columns>
                        </TableView>
                     </children></VBox>
               </content>
          </Tab>
            <Tab text="View Your Courses">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TableView fx:id="courseTable" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn id="courseID" fx:id="courseID" prefWidth="75.0" text="Course ID" />
                            <TableColumn id="teacherID" fx:id="teacherID" prefWidth="75.0" text="Teacher ID" />
                              <TableColumn id="courseName" fx:id="courseName" prefWidth="184.0" text="Course Name" />
                              <TableColumn id="courseDescription" fx:id="courseDescription" prefWidth="266.4000244140625" text="Description" />
                          </columns>
                        </TableView>
                     </children></VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
